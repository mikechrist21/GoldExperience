<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20sp" >

    <Button
        android:id="@+id/adapter_planlist_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/delete" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@id/adapter_planlist_btn_delete" >

        <TextView
            android:id="@+id/adapter_planlist_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Name"
            android:textSize="30sp"
            android:layout_marginBottom="5sp" />

        <TextView
            android:id="@+id/adapter_planlist_tv_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place Date + Plan Time"
            android:layout_marginTop="5sp" />

        <TextView
            android:id="@+id/adapter_planlist_tv_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Place description"
            android:layout_marginTop="5sp" />

    </LinearLayout>

</RelativeLayout>
